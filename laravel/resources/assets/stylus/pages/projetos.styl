.center
  background-color #516e04
  padding 50px 30px
  
  .box_card
    background-color white
    border-radius 10px
    padding 10px
    margin-left auto
    margin-right auto
    max-width 80%
    margin-top 40px
    margin-bottom 25px
    box-shadow 1px 1px 20px 6px #324500
    transition 0.5s all
    &:hover
      box-shadow 1px 1px 20px 10px #658a04
      transform scale(1.05)
    +below($mobile)
      max-width 100%
    a  
      display flex
      +below($tablet)
        flex-direction column
        justify-content center
        align-items center
        row-gap 20px
      .card_img  
        padding-top 5px
        padding-left 5px
        +below($mobile)
          padding 0
        img  
          border-radius 10px
          margin-bottom -25px
          +below($tablet)
            margin-top 15px
          +below($mobile)
            width 205px
      .card_text
        padding 15px 50px
        +below($tablet)
          margin-top 20px
        +below($mobile)
          padding 5px
        h1 
          muli 29
          +below($mobile)
            muli 20
            text-align center
        .end     
          lato 17
          margin-top 15px
          +below($mobile)
            lato 15
            text-align justify
    .see_glr
      muli 20
      margin-left auto
      padding-right 10px
      &:hover
        color rgb(16, 182, 16)
        font-weight bold
      +below($tablet)
        margin-right auto
      +below($mobile)
        padding-top 15px
        muli 13