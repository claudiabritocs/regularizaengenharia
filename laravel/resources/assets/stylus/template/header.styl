.headermain
    width: 100%
    height: 70px
    background: #ffffff
    
    .mainheader
        display: flex
        align-items center
        justify-content: space-around
        position: relative
        
        img
            width: 182px
            height: auto
            padding: 15px 15px
            margin-top: -4px

        .menulongo
            display flex
            +below(1260px)
                display: none
            ul
                display: flex
                column-gap: 10px
                position: relative
                a
                    montserrat 15 bold
                    list-style: none
                    padding: 8px
                    &:hover
                        background: #bdcbbf
                        border-radius: 5px

                .dropdown-content
                    display: none
                    position: absolute
                    top 35px
                    right 0
                    background-color: white
                    min-width: 160px
                    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2)
                    z-index: 93
                    a
                        montserrat 14 bold
                        padding: 12px 16px
                        text-decoration: none
                        display: block
                        &:hover 
                            background-color: #bdcbbf

        .menuburgerlist0
            display: none
            +above(1260px)
                display: none
        .menuburgerlist
            display: block!important
            position: absolute
            top: 70px
            left: 50%
            transform: translateX(-50%)
            text-align: center;
            width: 90%;
            line-height: 1.5;
            transition: 1s all
            background: #fff
            z-index: 92
            +above(1260px)
                display: none!important
            a
                montserrat 18 bold
                list-style: none
                background: #f5f8fa
                &:hover
                    background-color: #bdcbbf
            ul
                padding: 0
                text-align: center
                li
                    padding: 3px
                    width: 60%;
                    margin-right: auto
                    margin-left: auto
                    &:hover
                        background-color: #bdcbbf

        .menuburger
            display: block
            background: #506d4c
            padding: 14px 18px
            color: white
            font-size: 20px
            cursor: pointer
            +above(1260px)
                display: none





