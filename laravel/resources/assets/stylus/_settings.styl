@import url('https://fonts.googleapis.com/css2?family=Dosis:wght@300;500;700&display=swap');

dosis($size, $weight = normal, $style = normal)
    font-size $size + 0px
    font-family 'Dosis', 'Helvetica', 'Arial', sans-serif
    font-weight 500
    font-style $style
    if $weight == light
        font-weight 300
    if $weight == bold
        font-weight 700

@import url('https://fonts.googleapis.com/css2?family=Montserrat');

montserrat($size, $weight = normal, $style = normal)
    font-size $size + 0px
    font-family 'montserrat', 'Helvetica', 'Arial', sans-serif
    font-weight 500
    font-style $style
    if $weight == light
        font-weight 300
    if $weight == bold
        font-weight 700

